{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-shadow": "off",
        "radix": "off",
        "arrow-parens": ["error", "as-needed"],
        "prefer-destructuring": "off",
        "no-underscore-dangle": "off",
        "object-shorthand": "off"
    }
}
